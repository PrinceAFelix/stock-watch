{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/scan.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/scan", "dest": "/api/scan.js" },
    { "src": "/api/scan/bulk", "dest": "/api/scan.js" },

    { "src": "/(.*\\.(js|css|png|jpg|svg|ico|json))", "dest": "/$1" },

    { "src": "/.*", "dest": "/index.html" }
  ]
}
